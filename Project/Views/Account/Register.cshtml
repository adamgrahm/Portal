@model Project.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="col-md-8 col-md-offset-1">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h2>Create a new account</h2>
        <hr style="border-color:black; color:black; background-color:black;" />
        <br />
            @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.NickName, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.NickName, new { @class = "form-control", @placeholder = "Choose a nickname" })
            </div>
        </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter your email..." })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", @placeholder = "YYYY-MM-DD" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Info, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextAreaFor(m => m.Info, new { @class = "form-control", @placeholder = "Write something about yourself...", @style = "height:100px;" })
                </div>
            </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Choose your password..." })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm your password..." })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" class="btn btn-info btn-lg" value="Register" />
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
