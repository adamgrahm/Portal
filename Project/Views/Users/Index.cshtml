@model IEnumerable<Project.Models.ApplicationUser>

<hr style="background-color:black; border-color:black; color:black;" />
@if (User.IsInRole("Admin"))
{
    using (Ajax.BeginForm("Search", "Users", new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "AdminPage2",
        HttpMethod = "Post"
    }))
    {
        <form class="col-md-12">
            <div class="form-group col-xs-6">
                <input type="text" placeholder="Search for a nickname..." name="searchstring" class="form-control" />
            </div>
            <div class="form-group col-xs-6">
                <input type="submit" class="btn btn-success" value="Search!" />
            </div>
        </form>
    }
    @Html.Partial("_PartialUsers")
}


