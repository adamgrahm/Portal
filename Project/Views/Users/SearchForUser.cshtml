@model IEnumerable<Project.Models.ApplicationUser>
@if (User.Identity.IsAuthenticated)
{
    <div class="col-md-8 col-md-offset-2">

        @if (Model.Count() > 0)
        {
            <br />
            <h3>Search results for "@ViewBag.Message"</h3>
            <hr style="color:black; background-color:black; border-color:black;" />
            foreach (var item in Model)
                {

                    <ul class="col-md-12" style="list-style:none; border:ridge;">
                        <li>@Html.ActionLink(item.UserName, "DirectSearch", "Users", routeValues: new { username = item.UserName }, htmlAttributes: new { })</li>
                        <li>@item.City, @item.Country</li>
                    </ul>

            }
        }
        else
        {
            <h3>There are no user matching "@ViewBag.Message"</h3>
        }



    </div>

}

