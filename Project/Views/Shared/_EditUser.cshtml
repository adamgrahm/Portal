@model Project.Models.ApplicationUser

<div class="col-md-8 col-md-offset-1">

    @using (Ajax.BeginForm("SaveUser", "Users", new { username = Model.UserName }, new AjaxOptions
    {
        HttpMethod = "Post",
        UpdateTargetId = "AdminPage",
        InsertionMode = InsertionMode.Replace
    }))
    {
        
        <hr style="border-color:black; color:black; background-color:black;" />
        <br />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.NickName, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.EditorFor(m => m.NickName, new { @class = "form-control", @placeholder = "Choose a nickname" })
            </div>
        </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(m => m.DateOfBirth, new { @class = "form-control", @placeholder = "YYYY-MM-DD" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Info, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(m => m.Info, new { @class = "form-control", @placeholder = "Write something about yourself...", @style = "max-height:50px;" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-info btn-lg" value="Save" />
                </div>
            </div>
    }

</div>


