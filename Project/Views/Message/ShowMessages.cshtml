@model IEnumerable<Project.Models.ApplicationUser>

<div class="col-md-10">
    <h1 style="font-weight:bold;">Messages</h1>
    <hr />
    <div class="col-md-4">
        <ul class="nav nav-pills nav-stacked" style="overflow:hidden;">
            <li><a href="~/Manage/Index">Start</a></li>
            <li><a href="~/Account/ChangeProfile">Change profile</a></li>
            <li><a href="~/Manage/ChangePassword">Change Password</a></li>
            <li class="active" style="font-size:30px;"><a href="~/Message/ShowMessages">Messages</a></li>
        </ul>
    </div>
    
    <div class="col-md-8">
        <div>
            @using (Ajax.BeginForm("Search", "Message", new AjaxOptions
            {
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "messageSite",
                HttpMethod = "Post"
            }))
            {
                <div class="form-group">
                    <input type="text" placeholder="Search for a user..." name="username" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-success" />
                </div>

            }
        </div>
        @Html.Partial("_PartialMessages")
    </div>
</div>