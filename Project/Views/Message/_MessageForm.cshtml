@model IEnumerable<Project.Models.ApplicationUser>
@if (User.Identity.IsAuthenticated)
{



    using (Ajax.BeginForm("NewMessage", "Message", new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "MessageView",
        HttpMethod = "Post"
    }))
    {
        <label>Select a user to message:</label>
        <div class="form-group">
            <select name="username" class="form-control">
                @foreach (var item in Model)
                {
                    <option>@item.UserName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Write your message...</label>
            <textarea style="height:150px;" placeholder="Write a message..." name="content" class="form-control"></textarea>
        </div>
            <div class="form-group">
                <input type="submit" class="btn btn-sm btn-success" value="Send" />
            </div>
    }
}
