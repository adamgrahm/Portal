
@{ 
    var hour = DateTime.Now.Hour;
    var minute = DateTime.Now.Minute;
}
<h1>Livechat</h1>
<hr />


<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <input type="text" placeholder="Message" class="form-control" data-bind="value:message" />
        </div>
        <div class="form-group">
            <input class="btn btn-primary" data-bind="click:sendMessage" value="Send" />
        </div>
    </div>

    <div class="col-md-4">
        <div data-bind="foreach:messages">
            @*<p>@DateTime.Now.ToString("yyyy-MM-dd") @hour @minute</p>*@
            <div data-bind="text: $data"></div>
            <span style="font-style:italic;">Sent at: @DateTime.Now</span>
            <hr />
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Scripts/jquery.signalR-2.2.1.js"></script>
    <script src="~/SignalR/hubs"></script>
    <script src="~/Scripts/knockout-3.4.0.js"></script>
    <script src="~/Scripts/SignalR.js"></script>
}
